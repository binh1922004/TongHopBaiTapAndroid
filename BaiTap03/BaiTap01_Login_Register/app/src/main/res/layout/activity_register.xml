<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageViewBg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create\nAccount"
        android:textStyle="bold"
        android:textColor="#4267B2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBg1"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/imageViewBg1"
        app:layout_constraintTop_toTopOf="@+id/imageViewBg1" />
    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/imageViewBg1"
        app:layout_constraintTop_toTopOf="@+id/tvCreate"
        app:layout_constraintVertical_bias="0.25"
        android:text=" Name"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:drawableLeft="@drawable/name"
        />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/imageViewBg1"
        app:layout_constraintTop_toTopOf="@+id/tvCreate"
        app:layout_constraintVertical_bias="0.43"
        android:text=" Email"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:drawableLeft="@drawable/email"
        />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/imageViewBg1"
        app:layout_constraintTop_toTopOf="@+id/tvCreate"
        app:layout_constraintVertical_bias="0.61"
        android:text=" Password"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:drawableLeft="@drawable/password"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/edtPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.9"
        android:background="@drawable/btn_arrow2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget your password? Recovery it"
        app:layout_constraintTop_toTopOf="@+id/edtPassword"
        android:textColor="#4267B2"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.87"
        />
</androidx.constraintlayout.widget.ConstraintLayout>