    <corners android:radius="12dp" />

    <!-- Viền xung quanh -->
    <stroke android:width="2dp" android:color="#4267B2" />

    <!-- Màu nền -->
    <solid android:color="@android:color/transparent" />

    <!-- Padding để chữ không sát viền -->
